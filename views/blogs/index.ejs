<% layout('layouts/boilerplate') -%>
<body class="d-flex flex-column min-vh-100">
  <div class="container flex-grow-1">
    <% for(let blog of blogs){ %>
    <a href="/blogs/<%= blog.id %>" style="text-decoration: none;">
      <div class="card my-3 mt-4 mb-5">
        <div class="card-header mb-3" style="border-radius: 2rem">
          <b><%= blog.title %></b>
          <h5 class="card-title" style="color: aliceblue;">@<%=blog.author.username%></h5>
        </div>
        <img class="image" src="<%= blog.image.url %>" />
      </div>
    </a>
    <% } %>
  </div>
</body>
